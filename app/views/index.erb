<div id="slideshow">
  <img src="/imgs/01.png">
  <img src="/imgs/02.png">
  <img src="/imgs/03.png">
  <img src="/imgs/04.png">
  <img src="/imgs/05.png">
  <img src="/imgs/06.png">
</div>

<section>

  <div id="trip" class="text">
    <h2><%= @trip.title %></h2>
    <div><%= @trip.body %></div>
  </div>

  <div id="about" class="text">
    <h2><%= @about.title %></h2>
    <div><%= @about.body %></div>
  </div>

  <div id="schedule" class="text">
    <h2>Schedule</h2>
    <% @schedule.each do |trip| %>
      <h4><%= trip.name %></h4>
      <p>Location: <%= trip.location %></p>
      <p><%= trip.start_date %> - <%= trip.end_date %></p>
      <p>Cost: $<%= trip.price %></p>
    <% end %>
  </div>

  <div id="contact" class="text">
    <h2><%= @contact.title %></h2>
    <div><%= @contact.body %></div>
  </div>

  <footer>
    <p>
      &copy Daniel Woznicki 2015
      <a href="/admin">admin login</a>
    </p>
  </footer>
</section>
